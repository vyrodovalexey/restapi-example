{
  "realm": "restapi-test",
  "enabled": true,
  "displayName": "REST API Test Realm",
  "sslRequired": "none",
  "registrationAllowed": false,
  "loginWithEmailAllowed": true,
  "duplicateEmailsAllowed": false,
  "resetPasswordAllowed": false,
  "editUsernameAllowed": false,
  "bruteForceProtected": false,
  "accessTokenLifespan": 300,
  "ssoSessionIdleTimeout": 1800,
  "ssoSessionMaxLifespan": 36000,
  "roles": {
    "realm": [
      {
        "name": "api:read",
        "description": "Allows read operations on REST API services"
      },
      {
        "name": "api:write",
        "description": "Allows write operations on REST API services"
      },
      {
        "name": "admin",
        "description": "Full administrative access"
      }
    ]
  },
  "clients": [
    {
      "clientId": "restapi-server",
      "name": "REST API Server",
      "description": "OIDC client for the REST API test server",
      "enabled": true,
      "clientAuthenticatorType": "client-secret",
      "secret": "restapi-server-secret",
      "protocol": "openid-connect",
      "publicClient": false,
      "serviceAccountsEnabled": true,
      "authorizationServicesEnabled": false,
      "standardFlowEnabled": true,
      "directAccessGrantsEnabled": true,
      "redirectUris": ["*"],
      "webOrigins": ["*"],
      "attributes": {
        "access.token.lifespan": "300",
        "use.refresh.tokens": "true"
      },
      "defaultClientScopes": [
        "web-origins",
        "profile",
        "roles",
        "email"
      ],
      "optionalClientScopes": [
        "address",
        "phone",
        "offline_access"
      ],
      "protocolMappers": [
        {
          "name": "audience-mapper",
          "protocol": "openid-connect",
          "protocolMapper": "oidc-audience-mapper",
          "consentRequired": false,
          "config": {
            "included.client.audience": "restapi-server",
            "id.token.claim": "false",
            "access.token.claim": "true"
          }
        },
        {
          "name": "realm-roles-mapper",
          "protocol": "openid-connect",
          "protocolMapper": "oidc-usermodel-realm-role-mapper",
          "consentRequired": false,
          "config": {
            "multivalued": "true",
            "claim.name": "realm_roles",
            "jsonType.label": "String",
            "id.token.claim": "true",
            "access.token.claim": "true",
            "userinfo.token.claim": "true"
          }
        }
      ]
    }
  ],
  "users": [
    {
      "username": "test-user",
      "enabled": true,
      "email": "test-user@example.com",
      "firstName": "Test",
      "lastName": "User",
      "emailVerified": true,
      "credentials": [
        {
          "type": "password",
          "value": "test-password",
          "temporary": false
        }
      ],
      "realmRoles": [
        "api:read"
      ]
    },
    {
      "username": "admin-user",
      "enabled": true,
      "email": "admin-user@example.com",
      "firstName": "Admin",
      "lastName": "User",
      "emailVerified": true,
      "credentials": [
        {
          "type": "password",
          "value": "admin-password",
          "temporary": false
        }
      ],
      "realmRoles": [
        "api:read",
        "api:write",
        "admin"
      ]
    }
  ]
}
